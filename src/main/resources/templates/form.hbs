{{#partial "header"}}
  <nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="/">
      <img src="/assets/images/brand.svg" width="50" height="30" class="d-inline-block align-top" alt="SVG Brand">
      <span class="pl-2">Hack-A-Thon</span>
    </a>

    <ul class="nav nav-pills">
      <li class="nav-item">
        <a class="nav-link" href="/">Home</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="/teams">Teams</a>
      </li>
    </ul>
  </nav>
{{/partial}}

{{#partial "main"}}
  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
          {{#if updateTeam}}
            <h4 class="display-4">Edit Your Team!</h4>
            <p class="lead">Cras justo odio, dapibus ac facilisis in, egestas eget quam. Fusce dapibus, tellus ac cursus commodo, tortor mauris condimentum nibh, ut fermentum massa justo sit amet risus.</p>
          {{else}}
            <h4 class="display-4">Create Your Team!</h4>
            <p class="lead">Cras justo odio, dapibus ac facilisis in, egestas eget quam. Fusce dapibus, tellus ac cursus commodo, tortor mauris condimentum nibh, ut fermentum massa justo sit amet risus.</p>
          {{/if}}
          <div class="card">
            <div class="card-body">
              {{#if updateTeam}}
                <form action="/teams/{{updateTeam.id}}/update" method="post">
                  <div class="form-group">
                    <div class="input-group mb-3">
                      <div class="input-group-prepend">
                        <span class="input-group-text" id="atSymbol-addon">@</span>
                      </div>
                      <input type="text" id="teamName" name="teamName" class="form-control" value="{{updateTeam.stringName}}" aria-label="Team Name" aria-describedby="atSymbol-addon">
                    </div>
                  </div>
                  <div class="form-group">
                    <input type="text" id="teamDesc" name="teamDesc" class="form-control" value="{{updateTeam.stringDescription}}" aria-label="Short Team Description...">
                  </div>

                  <button type="submit" class="btn btn-info">Update Team</button>
                </form>
              {{else}}
                <form action="/teams/new" method="post">
                  <div class="form-group">
                    <div class="input-group mb-3">
                      <div class="input-group-prepend">
                        <span class="input-group-text" id="atSymbol-addon">@</span>
                      </div>
                      <input type="text" id="teamName" name="teamName"  class="form-control" placeholder="Team Name e.g., NBA" aria-label="Team Name" aria-describedby="atSymbol-addon">
                    </div>
                  </div>
                  <div class="form-group">
                    <input type="text" id="teamDesc" name="teamDesc" class="form-control" placeholder="Short Team Description..." aria-label="Short Team Description...">
                  </div>
                  <button type="submit" class="btn btn-info">Create Team</button>
                </form>
              {{/if}}
            </div>
          </div>

        </div>
        <div class="col-3"></div>
      </div>
    </div>
  </div>
{{/partial}}

{{> layout.hbs}}