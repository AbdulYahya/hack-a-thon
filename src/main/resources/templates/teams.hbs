{{#partial "header"}}
  <nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="/">
      <img src="/assets/images/brand.svg" width="50" height="30" class="d-inline-block align-top" alt="SVG Brand">
      <span class="pl-2">Hack-A-Thon</span>
    </a>

    <ul class="nav nav-pills">
      <li class="nav-item">
        <a class="nav-link" href="/">Home</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="/teams">Teams</a>
      </li>
    </ul>
  </nav>
{{/partial}}


{{#partial "main"}}
  <h1>Team list!</h1>

  {{#if teams}}
    {{#each teams }}
      <p>Current Team:</p>
      <p>{{ stringName }} <a href="/teams/{{id}}">read more...</a></p>
    {{/each}}
  {{else}}
    <p>No teams!</p>
  {{/if}}
{{/partial}}

